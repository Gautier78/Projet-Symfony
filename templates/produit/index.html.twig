{% extends 'base.html.twig' %}

{% block title %}Hello ProduitController!{% endblock %}

{% block body %}
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
          <a class="navbar-brand" href="#">Home</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
          </button>
          
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link" href="">{{ 'produit.titre'|trans}}</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/fr/panier">{{ 'panier.titre'|trans}}</a>
              </li>
            </ul>
          </div>
        </nav>  
        </br>
        
  <h1>{{ 'produit.titre'|trans}}</h1>

  {% if produits is not empty %}
   <table class="table">
       <thead>
       <tr>
            
            <th>{{ 'tableauProduit.photo'|trans}}</th>
            <th>{{ 'tableauProduit.nom'|trans}}</th>
            <th>{{ 'tableauProduit.quantite'|trans}}</th>
            <th>{{ 'tableauProduit.prix'|trans}}</th>
            <th>{{ 'tableauProduit.supprimer'|trans}}</th>
        </tr>
       </thead>
       <tbody>
       {% for produit_edit in produits %}
           <tr>
            <td>
              <img src="{{ asset('/uploads/'~ produit_edit.photo)}}" class="w-25" >
              </a>
            </td>


            
            <td>
            <a href="{{ path('produit_edit', { 'id': produit_edit.id }) }}">
            {{ produit_edit.nom }}
            </a>
            </td>
            <td>{{ produit_edit.quantite }}</td>
            <td>{{ produit_edit.prix }}€</td>
            <td>
                  <a href="{{ path('delete_produit', { 'id': produit_edit.id }) }}">
                  ❌
                  </a>
              </td> 
           
           </tr>
           {% endfor %}
       </tbody>
       </table>

  {% else %}
  <p>{{ 'aucune.titre'|trans}}</p>
  {% endif %}
  <h2>{{ 'ajouterPanier.titre'|trans}}</h2>

  {{form(form_produit_new)}}

{% endblock %}
