{% extends 'base.html.twig' %}

{% block title %}Hello ProduitController!{% endblock %}

{% block body %}
<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
  <a class="navbar-brand" href="#">Home</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav">
      <li class="nav-item">
        <a class="nav-link" href="/fr/produit">{{ 'produit.titre'|trans}}</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="">{{ 'panier.titre'|trans}}</a>
      </li>
    </ul>
  </div>
</nav>  
</br>

  <h1>{{ 'panier.titre'|trans}} </h1>

  {% if paniers is not empty %}

  <p> {{ 'panier.nb' |trans ({'nb': paniers|length} ) }} </p>

    <table class="table">
        <thead>
            <tr>
                <th>{{ 'tableauPanier.nom'|trans}}</th>
                <th>{{ 'tableauPanier.quantite'|trans}}</th>
                <th>{{ 'tableauPanier.prix'|trans}}</th>
                <th>{{ 'tableauPanier.supprimer'|trans}}</th>
            </tr>
        </thead>
        <tbody>


            {% for panier in paniers %}
              <tr>

                <td>
                  <a href="{{ path('fiche', { id: panier.id }) }}">
                    {{ panier.produit }}
                  </a>
                </td>

                <td>{{ panier.quantite }}</td>
                <td>{{ panier.produit.prix * panier.quantite }}</td>
                

    
                <td>
                  <a href="{{ path('delete_panier', { 'id': panier.id }) }}">
                  ‚ùå
                  </a>
                </td>
              </tr>
            {% endfor %}
        </tbody>
    </table>

  {% else %}
  <p>{{ 'aucune.titre'|trans}} </p>

  {% endif %}



{% endblock %}
